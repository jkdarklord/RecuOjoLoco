package test;

import java.io.FileNotFoundException;
import javax.swing.JOptionPane;;

public class IndexerControler
{

	public static void run()
	{
		Indexer idxr;
		
		File docListFile = new File("docs.ser");
		if(docListFile.exists())
		{
			try
			{
				FileInputStream file = new FileInputStream("docs.ser");
				ObjectInputStream input = new ObjectInputStream(file);
				docList = (HashMap<String, Integer>) input.readObject();
				input.close();
			}catch (IOException | ClassNotFoundException e)
			{
				e.printStackTrace();
			}
		}
		else
		{
			docList = new HashMap<String, Integer>();
		}
		
		try
		{
			idxr.parseDocument("a.txt");
			idxr.parseDocument("b.txt");
		} catch (FileNotFoundException e)
		{
			e.printStackTrace();
			JOptionPane.showMessageDialog(null, "Yer fuk up");
			return;
		}
		
		JOptionPane.showMessageDialog(null, idxr.wDict.toString());
		JOptionPane.showMessageDialog(null, idxr.docList.toString());
		JOptionPane.showMessageDialog(null, idxr.pList.toString());
		idxr.pList.save();
		JOptionPane.showMessageDialog(null, "It is time");
		idxr.pList.load();
		JOptionPane.showMessageDialog(null, idxr.pList.toString());
		idxr.save();
	}

}
